<odoo>
  <data>
    <!-- AGREGA UUID EN FACTURAS DE PROVEEDOR -->
    <record id="invoice_supplier_form_uuid" model="ir.ui.view">
      <field name="name">invoice_supplier_form_uuid</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <field name='currency_id' position='after'>
          <field name='l10n_mx_edi_cfdi_uuid' />
          <field name='l10n_mx_edi_cfdi_name2' invisible='1'/>
        </field>
      </field>
    </record>

    <record id="invoice_form_uuid" model="ir.ui.view">
      <field name="name">invoice_form_uuid</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <field name='l10n_mx_edi_origin' position='before'>
          <field name='l10n_mx_edi_cfdi_name' />
          <field name='l10n_mx_edi_cfdi_name2' invisible='1'/>
        </field>
      </field>
    </record>

    <!-- VISTA QUE AGREGA CAMPO DE CODIGO DE IMPUESTO -->
    <record id="view_tax_form_tax_code" model="ir.ui.view">
      <field name="name">view_tax_form_tax_code</field>
      <field name="model">account.tax</field>
      <field name="inherit_id" ref="account.view_tax_form"/>
      <field name="arch" type="xml">
        <field name='description' position='after'>
          <field name='tax_code_mx' />
        </field>
      </field>
    </record>


    <record id="xml_import_wizard" model="ir.ui.view">
      <field name="name">xml_import_wizard</field>
      <field name="model">xml.import.wizard</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="main">
                  <group colspan='4'>
                    <group cols='2'>
                      <field name="invoice_type"/>
                      <field name="filename" invisible='1'/>
                      <field name="uploaded_file" widget='binary' filename='filename'/>
                      <field name="payment_term_id"/>
                      <field name="invoice_account_id"/>
                      <field name="journal_id"/>
                      <field name="user_id" attrs="{'required':[('invoice_type','=','out_invoice')]}"/>
                    </group>
                    <group cols='2'>
                      <field name="import_type"/>
                      <field name="create_product" attrs="{'invisible':[('import_type','=','start_amount')]}"/>
                      <field name="sat_validation"/>
                      <field name="line_account_id"/>
                      <field name="line_analytic_account_id"/>
                      <field name="line_analytic_tag_ids" widget="many2many_tags"/>
                      <field name="team_id" attrs="{'required':[('invoice_type','=','out_invoice')]}"/>
                      <field name="description" 
                        attrs="{'invisible':[('invoice_type','!=','in_invoice')]}"/>
                      
                    </group>
                  </group>
                </group>

                <footer>
                    <button name="validate_bills" type="object" string="Importar" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar" type="object" class="oe_link oe_inline"/>
                </footer>
            </sheet>
        </form>
      </field>
    </record>

    <record id="xml_import_wizard_action" model="ir.actions.act_window">
      <field name="name">Importar XMLs</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">xml.import.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="prodigia_xml_to_invoice.xml_import_wizard"/>
      <field name="target">new</field>
      <field name="multi">True</field>
    </record>

    <!-- v12 -->
    <menuitem id="xml_import_wizard_menu_root"
        name="Importar facturas"
        parent="account_accountant.menu_accounting"
        sequence='10'/>
    <!-- v11 -->
    <!-- <menuitem id="xml_import_wizard_menu_root"
        name="Importar facturas"
        parent="account.menu_finance"
        sequence='10'/> -->

    <menuitem id="xml_import_wizard_menu"
        name="Importar xml-facturas"
	      parent="prodigia_xml_to_invoice.xml_import_wizard_menu_root"
	      action="xml_import_wizard_action" />
  </data>
</odoo>