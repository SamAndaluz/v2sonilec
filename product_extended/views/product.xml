<odoo>
  <data>
    <record id="product_template_extended" model="ir.ui.view">
        <field name="name">Product template extended</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='public_categ_ids']" position="replace">
                <label for="public_categ_ids"/>
                <div class="o_row">
                    <field name="public_categ_ids" widget="many2many_tags"/>
                    <button name="process_categs" type="object" class="oe_link" string="Procesar categorías" help="Coloca la categoría de todos los productos en la categoría de comercio electrónico."/>
                </div>
            </xpath>
        </field>
    </record>
  </data>
</odoo>