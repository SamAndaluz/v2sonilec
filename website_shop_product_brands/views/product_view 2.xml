<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_brand_form_view" model="ir.ui.view">
        <field name="name">product template brand form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="brand_id"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_search_view_filter" model="ir.ui.view">
        <field name="name">product template brand search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search string="Brand">
                <group expand="0" string="Group By">
                    <filter name="groupbyid" string="Brand" context="{'group_by': 'brand_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="product_template_brand_action" model="ir.actions.act_window">
        <field name="name">Products Template brand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="search_view_id" ref="product_template_search_view_filter"/>
        <field name="context">{"search_default_groupbyid": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product, the first step of a new sale!
            </p>
        </field>
    </record>

    <menuitem id="product_menu" name="Products" parent="website_shop_product_brands.main_brand_menu" action="product_template_brand_action"/>
</odoo>